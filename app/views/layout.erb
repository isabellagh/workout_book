    <div class="wrapper">


      <% if flash[:error] %>
      <h3 style="color:red;"> <%= flash[:error] %></h3>
      <% end %>

      <% if flash[:message] %>
      <h3 style="color:green;"> <%= flash[:message] %></h3>
      <% end %>

  
    <div class="topnav">
      <% if logged_in? %>
        <a href="/">Home</a>
        <a href="/posts/new">Create a Post</a>
        <a href="/posts">All Posts</a>
        <a href="/profiles">All Profiles</a>
        <a href="/logout">Log Out</a>
      <% end %>
    </div>
    <style>
  .topnav {
  background-color: #456;
  overflow: hidden;
}

.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}
  </style>
  
    <br><br>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>WorkoutBook</strong></small>
      </footer>

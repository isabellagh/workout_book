<h1>All Posts</h1>
<br><br>
<% @posts.each do |post| %> 
  <h3><a href="/posts/<%= post.id %>"><%=post.title %></a></h3>
  <img src="<%= post.image_url %>" alt="<%= post.title %>" height="350" width="300">
  <p>Created At: <%= post.created_at %></p>
  <em><%= post.description %></em>
  <br><br>
  <strong>By: <%= post.user.name %></p></strong>
  <br><br>
  <br><br>
<% end %>

  